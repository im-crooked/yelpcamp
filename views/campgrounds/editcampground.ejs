
<% include ../partials/header%>



<div class="container text-center">
	<div class="row">
		<h1>Edit the camp details</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value="<%= camp.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" value="<%= camp.image%>"type="text" name="campground[image]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[description]" value="<%= camp.description%>">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[price]" value="<%= camp.price%>">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
				<a class="btn btn-danger btn-block" href="/campgrounds">BACK</a>
			</form>
		</div>
	</div>
</div>



<% include ../partials/footer%>