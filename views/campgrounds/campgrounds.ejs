<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
		<h1>
		Welcome to campgrounds!!!.
		</h1>
		<p>
		View all our diversed camps.
		</p>
		<a class="btn btn-primary btn-lg" href="/campgrounds/newcampground">ADD NEW CAMPGROUND</a>
	</div>
	</header>
	
	<div class="row text-center " style="display:flex; flex-wrap:wrap;">
		<% camps.forEach((camp)=>{ %>
			 <div class="col-md-3 col-sm-6">
				 <div class="thumbnail">
					 <img src="<%= camp["image"] %>">
					 <div class="caption">
						 <p> <%= camp["name"] %></p>
					 </div>
					 <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">MORE INFO</a>
				 </div>
			 </div>
		<% }); %>
	</div>




</div>




<% include ../partials/footer %>