
<% include ../partials/header%>



<div class="container text-center">
	<div class="row">
		<h1>Edit the comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" value="<%=comment.text%>">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Submit</button>
				<a class="btn btn-danger btn-block" href="/campgrounds">BACK</a>
			</form>
		</div>
	</div>
</div>



